---
import SocialLinks from '@components/SocialLinks'

import sponsors from '@data/sponsors.json'
import navigation from '@data/navigation.json';

const golden_dino = true;
---
<div class="border-t-4 border-t-main-color-700 bg-white bg-opacity-40">

  <!-- SPONSORS -->
  <div class="border-t-4 border-b-4 border-main-color-600 bg-main-color-500 bg-opacity-40">
    <div class="max-w-screen-xl w-full mx-auto py-4 px-6 grid grid-cols-3 gap-4">

      <!-- MEDIA SPONSOR -->
      <div class="flex flex-col items-center">
        <h3 class="font-emphasis text-main-color-800 text-3xl">MEDIA SPONSOR</h3>
        <a href="{ sponsors.kuow.link }" target="_blank">
          <img
            src="{ sponsors.kuow.image }"
            alt="{ sponsors.kuow.name }"
            style="height: 80px"
          />
        </a>
      </div>

      <!-- SHUNPIKE -->
      <div class="flex flex-col items-center">
        <a href="{ sponsors.shunpike.link }" target="_blank">
          <img
            src="{ sponsors.shunpike.image }"
            alt="{ sponsors.shunpike.name }"
            class="rounded mx-auto block p-2 h-20 bg-[#f4efdf]"
          />
        </a>
        <p class="text-center text-sm text-main-color-800 mt-2">
          HONK! Fest West is fiscally sponsored by Shunpike.<br />
          <b>About Shunpike</b><br />
          Shunpike is the 501(c)(3) non-profit agency that provides independent
          arts groups in Washington State with the services, resources, and
          opportunities they need to forge their own paths to sustainable
          success.
        </p>
      </div>

      <!-- SPONSORS -->
      <div class="flex flex-col items-center">
        <h3 class="font-emphasis text-main-color-800 text-3xl">SPONSORS</h3>
        <a class="block mt-2 mb-3" href="{ sponsors.neighborhoods.link }" target="_blank">
          <img
            src="{ sponsors.neighborhoods.image }"
            alt="{ sponsors.neighborhoods.name }"
            class="mx-auto block rounded p-2 h-24 bg-white"
          />
        </a>
        <div class="flex flex-wrap justify-around">
          {sponsors.arts.map((sponsor) => (
            <div class="mx-2">
              <a href="{ sponsor.link }" target="_blank" class="rounded bg-white p-1 block">
                <img
                  src="{ sponsor.image }"
                  alt="{ sponsor.name }"
                  class="rounded w-full h-12"
                />
              </a>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- BOTTOM -->
  <div class="max-w-screen-xl w-full mx-auto p-4 grid grid-cols-3 gap-4">
    <a class="w-full text-center text-main-color-700 text-lg font-bold font-base" href="{ '/' }"
      >Â© 2021 HONK! Fest West</a
    >
    <ul class="flex justify-around items-center h-full flex-1">
      {Object.keys(navigation.social).map((item) => (
        <li class="text-main-color-700">
          <SocialLinks link={item} size="1.25rem"/>
        </li>
      ))}
    </ul>
    <a class="w-full text-center font-base link text-accent-color font-bold text-lg" href="#">
      Back to top
    </a>
  </div>
</div>
