---
import Head from '@components/BaseHead.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">

  <!-- HEAD -->
  <head>
    <Head title={title}>   
      <slot name="head" />
    </Head>
  </head>

  <body class="min-h-full">

    <!-- BACKGROUND IMAGE -->
    <div class="w-full h-full fixed top-0 left-0">
	    <div class="bg-rainier bg-cover bg-center opacity-40 w-full h-full fixed top-0 left-0"></div>
	    <div class="bg-gradient-to-b from-main-color-200 to-main-color-600 opacity-60 w-full h-full fixed top-0 left-0"></div>
    </div>

    <div class="w-full h-full absolute top-0 left-0">
      <!-- HEADER -->
      <header class="w-full px-6">
        <Header />
      </header>

      <!-- MAIN -->
      <main class="max-w-screen-xl my-4 sm:my-8 px-6 w-full mx-auto">
        <slot />
      </main>

      <!-- FOOTER -->
      <footer class="mt-auto w-full">
        <Footer />
      </footer>
    </div>
  </body>

</html>
