---
import Head from '@components/BaseHead.astro'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">

  <!-- HEAD -->
  <head>
    <Head title={title}>   
      <slot name="head" />
    </Head>
  </head>

  <body class="min-h-full flex flex-col">

    <!-- BACKGROUND IMAGE -->
    <div class="w-full h-full z-0 fixed top-0 left-0">
	    <div class="bg-rainier bg-cover bg-center opacity-40 w-full h-full fixed top-0 left-0"></div>
	    <div class="bg-main-color-300 bg-opacity-60 w-full h-full fixed top-0 left-0"></div>
    </div>

    <!-- HEADER -->
    <header class="z-10">
      <Header />
    </header>

    <!-- MAIN -->
	  <main class="z-10 max-w-screen-xl my-8 px-4 w-full mx-auto">
		  <slot />
	  </main>

    <!-- FOOTER -->
    <footer class="z-10 mt-auto">
      <Footer />
    </footer>
  </body>

</html>
