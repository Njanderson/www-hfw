---
import {Markdown} from 'astro/components'
import YAML from 'yaml'
import BaseLayout from '@layouts/BaseLayout.astro'
import Title from '$components/Title.astro'
import Image from '$components/Image.astro'

import volunteer_data from '@data/volunteer.json'

const positions = volunteer_data.positions
---

<BaseLayout title="Volunteer">
	<div class="flex flex-wrap md:flex-nowrap gap-4 sm:gap-6">
		<div class="w-full md:w-1/3">
			<div class="content-container">
				<Title title="Sign Up" center={true} />
				<p class="content">
					Help us produce an amazing HONK! Fest West 2022 Festival!
				</p>
				<a 
					href={volunteer_data.form_url}
					class="block font-base text-center rounded antialiased text-gray-200 font-bold flex-none mt-3 bg-accent-color w-full text-lg bg-opacity-80 px-2 hover:bg-opacity-90">
					Â» APPLY HERE
				</a>
			</div>
		</div>
		<div class="w-full md:w-2/3 flex flex-col gap-4 sm:gap-6">
			<div class="content-container">
				<Title title="HONK! Fest West" subtitle="NEEDS YOU!!!"/>
				<div class="content">
					<Markdown>
						Below is a list of currently open roles within the Organizing Committee. There are positions of varying commitment to suit every level!
					</Markdown>
				</div>
			</div>

			{Object.keys(positions).map((position) => (
				<div class="content-container">
					<Title title={position}  />
					<p>
						<Markdown content={positions[position].description}/>
					</p>
				</div>
			))}
		</div>
	</div>
</BaseLayout>